<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BioShop" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primáris szín, ha nincs dynamic -->
        <item name="colorPrimary">@color/seed</item>

        <!-- Edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Default kártya-sugár -->
        <item name="shapeAppearanceSmallComponent">@style/Shape.Rounded12</item>
    </style>

    <!-- kártyák: 12dp-es lekerekítés -->
    <style name="Shape.Rounded12" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">12dp</item>
    </style>

    <!-- BottomNav egyedi style -->
    <style name="Widget.BioShop.BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/seed</item>
        <item name="itemRippleColor">@color/md_theme_light_onPrimary</item>
        <item name="itemIconTint">@color/md_theme_light_onPrimary</item>
        <item name="itemTextColor">@color/md_theme_light_onPrimary</item>
    </style>
</resources>
